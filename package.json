{
  "name": "dbvtk-gui",
  "description": "Database Preservation Toolkit",
  "version": "1.0.0",
  "dbvtkVersion": "2.0.0",
  "author": "Luis Faria <lfaria@keep.pt>",
  "main": "./app/app.js",
  "build": {
    "appId": "com.database-preservation.gui",
    "artifactName": "${name}-${version}.${ext}",
    "asarUnpack": [
      "resources/war/dbvtk.war"
    ],
    "directories": {
      "buildResources": "buildResources"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "buildResources/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "./"
    },
    "win": {
      "icon": "buildResources/icon.ico"
    },
    "publish": [
      {
        "provider": "bintray",
        "package": "db-visualization-toolkit-electron",
        "repo": "db-visualization-toolkit",
        "owner": "keeps",
        "user": "006627"
      },
      {
        "provider": "github",
        "owner": "keeps",
        "repo": "db-visualization-toolkit-electron"
      }
    ]
  },
  "scripts": {
    "start": "./build.sh && ./node_modules/.bin/electron .",
    "pack": "./build.sh && electron-builder --dir",
    "dist": "./build.sh && electron-builder -p onTag",
    "dist-lw": "./build.sh && electron-builder -wl -p onTag"
  },
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "electron": "^5.0.2",
    "electron-builder": "^20.43.0",
    "electron-packager": "^13.1.1"
  },
  "dependencies": {
    "electron-updater": "^4.0.6",
    "tmp": "^0.1.0",
    "tree-kill": "^1.2.1",
    "wait-on": "^3.2.0"
  }
}
